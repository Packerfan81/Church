
<h1>Edit Parent Details</h1>

<form action="<%= admin_parent_path(@parent) %>" method="post" data-turbo="false" class="pure-form pure-form-aligned">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <fieldset>
    <div class="field">
      <label for="first_name">First Name</label><br />
      <input type="text" name="parent[first_name]" id="first_name" value="<%= @parent.first_name %>">
    </div>
    <div class="field">
      <label for="last_name">Last Name</label><br />
      <input type="text" name="parent[last_name]" id="last_name" value="<%= @parent.last_name %>">
    </div>
    <div class="field">
      <label for="parent_email">Email</label><br />
      <input type="email" name="parent[email]" id="parent_email" value="<%= @parent.email %>">
    </div>
    <div class="field">
      <label for="parent_phone_number">Phone Number</label><br />
      <input type="text" name="parent[phone_number]" id="parent_phone_number" value="<%= @parent.phone_number %>">
    </div>
    <div class="field">
      <label for="user_password">Password</label><br />
      <input type="password" name="parent[password]" id="user_password">
    </div>
    <div class="field">
      <label for="password_confirmation">Password Confirmation</label><br />
      <input type="password" name="parent[password_confirmation]" id="user_password_confirm">
    </div>
    <div class="actions">
      <input type="submit" value="Update" class="pure-button pure-button-primary">
    </div>
    <div class="actions">
  <input type="submit" value="Back" class="pure-button pure-button-primary"
      style="text-align: right; margin-bottom: 20px;">
  </div>

  </fieldset>
</form>

