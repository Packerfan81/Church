<% if policy(:admin_dashboard).show? %>
  <style>
    /* Basic Styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }

    th, td {
      text-align: left;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color:
 #f2f2f2;
    }

    .search-form {
      margin-bottom: 10px;
    }

    .actions a {
      margin-right: 5px;
    }
  </style>

  <h1>Admin Dashboard</h1>

  <%= link_to "Return to Home", root_path, class: "return-home-button" %>

  <h2>Users</h2>
  <%= search_form_for @user_search, url: admin_path, method: :get, class: 'search-form' do |f| %>
    <%= f.label :email_cont, "Search by Email:" %>
    <%= f.search_field :email_cont %>
    <%= f.submit "Search" %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Admin?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.admin? ? 'Yes' : 'No' %></td>
          <td>
            <%= link_to 'Edit', edit_user_registration_path(user) %>
            <% if policy(user).destroy? && !user.admin? %>
              <%= link_to 'Delete', user_registration_path(user), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this user?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Parents</h2>
  <%= search_form_for @parent_search, url: admin_path, method: :get, class: 'search-form' do |f| %>
    <%= f.label :full_name_cont, "Search by Name:" %>
    <%= f.search_field :full_name_cont %>
    <%= f.submit "Search" %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @parents.each do |parent| %>
        <tr>
          <td><%= parent.full_name %></td>
          <td><%= parent.phone_number %></td>
          <td><%= parent.email %></td>
          <td class="actions">
            <%= link_to 'View', parent_path(parent) %>
            <% if current_user.admin? %>
              <%= link_to 'Edit', edit_parent_path(parent) %>
            <% end %>
            <%= link_to 'Delete', parent_path(parent), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this parent?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Children</h2>
  <%= search_form_for @child_search, url: admin_path, method: :get, class: 'search-form' do |f| %>
    <%= f.label :full_name_cont, "Search by Name:" %>
    <%= f.search_field :full_name_cont %>
    <%= f.submit "Search" %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Parent</th>
        <th>Age</th>
        <th>Grade</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @children.each do |child| %>
        <tr>
          <td><%= child.full_name %></td>
          <td><%= child.parent.full_name %></td>
          <td><%= child.age %></td>
          <td><%= child.grade %></td>
          <td class="actions">
            <%= link_to 'Edit', edit_parent_child_path(child.parent, child) %>
            <%= link_to 'Delete', parent_child_path(child.parent, child), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this child?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Check-ins</h2>

  <table>
    <thead>
      <tr>
        <th>Child</th>
        <th>Parent</th>
        <th>Check-In Time</th>
        <th>Check-Out Time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @check_ins.each do |check_in| %>
        <tr>
          <td><%= check_in.child.full_name %></td>
          <td><%= check_in.parent.full_name %></td>
          <td><%= check_in.check_in_time %></td>
          <td><%= check_in.check_out_time || 'N/A' %></td>
          <td>
            <% if policy(check_in).edit? %>
              <%= link_to 'Edit', edit_check_in_path(check_in) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p>You are not authorized to access this page.</p>
<% end %>