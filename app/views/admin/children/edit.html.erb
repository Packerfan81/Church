<h1>Edit Child</h1>

<%= form_with model: @child, url: parents_children_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :age %>
    <%= f.number_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :food_allergies %>
    <%= f.text_field :food_allergies, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :special_medical_needs %>
    <%= f.text_field :special_medical_needs, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :emergency_contact %>
    <%= f.text_field :emergency_contact, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Add Child", class: 'btn btn-primary'  %>
  </div>
<% end %>

<%= link_to 'Back to Dashboard', parents_dashboard_path, class: 'btn btn-secondary' %>